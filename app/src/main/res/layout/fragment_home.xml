<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical">

    <include layout="@layout/include_title_main" />

    <!--随机密码生成器-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/scanView"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstView"
                    style="@style/scoreViewStyle"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_textview"
                    android:text="1" />

                <TextView
                    android:id="@+id/secondView"
                    style="@style/scoreViewStyle"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_textview"
                    android:text="2" />

                <TextView
                    android:id="@+id/thirdView"
                    style="@style/scoreViewStyle"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_textview"
                    android:text="3" />

                <TextView
                    android:id="@+id/fourthView"
                    style="@style/scoreViewStyle"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_textview"
                    android:text="4" />

                <TextView
                    android:id="@+id/fifthView"
                    style="@style/scoreViewStyle"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_textview"
                    android:text="5" />

                <TextView
                    android:id="@+id/sixthView"
                    style="@style/scoreViewStyle"
                    android:background="@drawable/bg_textview"
                    android:text="6" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/minuteProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:max="60000"
                android:progressDrawable="@drawable/progress" />
        </LinearLayout>

        <ImageView
            android:id="@+id/scanView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/ic_scan" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:text="密码分类"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!--用户自己保存的密码，分类以九宫格形式展示-->
    <GridView
        android:id="@+id/secretGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:horizontalSpacing="15dp"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="15dp" />
</LinearLayout>
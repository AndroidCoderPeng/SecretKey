<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:singleLine="true"
        android:text="这是标题"
        android:textColor="@color/white"
        android:textSize="@dimen/titleFontSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/passwordLayout"
            style="@style/itemLayoutStyle">

            <ImageView
                style="@style/leftImageStyle"
                android:background="@mipmap/password" />

            <TextView
                style="@style/textViewStyle"
                android:text="隐私设置" />

            <ImageView style="@style/rightImageStyle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_layout"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/outputLayout"
                style="@style/itemLayoutStyle">

                <ImageView
                    style="@style/leftImageStyle"
                    android:background="@mipmap/output" />

                <TextView
                    style="@style/textViewStyle"
                    android:text="导出数据" />

                <ImageView style="@style/rightImageStyle" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:background="@color/mainBackground" />

            <RelativeLayout
                android:id="@+id/inputLayout"
                style="@style/itemLayoutStyle">

                <ImageView
                    style="@style/leftImageStyle"
                    android:background="@mipmap/input" />

                <TextView
                    style="@style/textViewStyle"
                    android:text="导入数据" />

                <ImageView style="@style/rightImageStyle" />
            </RelativeLayout>
        </LinearLayout>

        <!--主题风格-->
        <RelativeLayout
            android:id="@+id/themeLayout"
            style="@style/itemLayoutStyle"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <ImageView
                style="@style/leftImageStyle"
                android:background="@mipmap/theme" />

            <TextView
                style="@style/textViewStyle"
                android:text="主题风格" />

            <ImageView style="@style/rightImageStyle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aboutLayout"
            style="@style/itemLayoutStyle"
            android:layout_marginTop="15dp">

            <ImageView
                style="@style/leftImageStyle"
                android:background="@mipmap/about" />

            <TextView
                style="@style/textViewStyle"
                android:text="关于应用" />

            <ImageView style="@style/rightImageStyle" />
        </RelativeLayout>

        <!--单机应用不需要清除缓存，功能保存，界面暂时隐藏，后续有需求再放开注释-->
        <RelativeLayout
            android:id="@+id/cacheSizeLayout"
            style="@style/itemLayoutStyle"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <ImageView
                style="@style/leftImageStyle"
                android:background="@mipmap/clean" />

            <TextView
                style="@style/textViewStyle"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/cacheSizeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
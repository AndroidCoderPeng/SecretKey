<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical">

    <include layout="@layout/include_title_cyan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/bg_textview_maincolor"
        android:paddingHorizontal="15dp"
        android:paddingVertical="3dp"
        android:text="日/夜间模式切换"
        android:textColor="@color/white"
        android:textSize="@dimen/textFontSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <Button
            android:id="@+id/nightModeButton"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/dayModeButton"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:background="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/bg_textview_maincolor"
        android:paddingHorizontal="15dp"
        android:paddingVertical="3dp"
        android:text="其他主题切换"
        android:textColor="@color/white"
        android:textSize="@dimen/textFontSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>